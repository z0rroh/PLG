<section class="background">
	<div class="row center-xs middle-xs">
		<div class="col-xs-4">
			<div class="Login-Card card-panel grey lighten-4">
				<form action="/user/addGroup" method="POST" class="row center-xs">
          <h5>Ingrese la llave para entrar a un grupo</h5>
          <% if(flash && flash.err) { %>
						<ul class="alert alert-success">
							<% Object.keys(flash.err).forEach(function(error){ %>
							<li> <%- JSON.stringify(flash.err[error]) %> </li>
						    <% }); %>
						</ul>
					<% } %>
					<div class="col-xs-12 input-field">
						<input class="validate" id="Signup-Name" type="text" name="key">
						<label for="Signup-Name">LLave de grupo</label>
					</div>
					<div class="Login-Button col-lg-12 input-field">
						<input class="btn btn-large" type="submit" value="Enviar">
						<input type="hidden" name="_csrf" value="<%=_csrf %>"/>
					</div>
				</form>
				<div class="row center-lg">
					<div class="SignUp col-lg-12">
						<div class="divider"></div><a class="SignUp-Button btn-flat" href="/salir">Salir</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
