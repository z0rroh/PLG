<section class="Layout-Content row center-lg">

  <section class="col-lg-8 card">
    <div class="AnuncioNuevo">
      <div class="row start-lg">
        <div class="AnuncioNuevo-Image col-lg-1"><img src="/images/avatars/default_user.png"></div>
        <div class="AnuncioNuevo-Form col-lg-10">
          <form action="/anuncios/create" class="box" method="POST" accept-charset="utf-8">
            <% if(flash && flash.err) { %>
              <% Object.keys(flash.err).forEach(function(error){ %>
                <% var error1 = flash.err[error] %>
              <script>
              var $toastContent = "<%= error1.message %>";
              document.addEventListener("DOMContentLoaded", function(event) {
                var displayCustomHTMLToast = function (content) {
                  Materialize.toast(content, 5000);
                }
                displayCustomHTMLToast($toastContent);
              });
              </script>
              <% }); %>

            <% } %>
            <div class="row start-lg">
              <div class="col-lg-12">
                <textarea name="text" id="text" class="AnuncioNuevo-Text" placeholder="Escribe un anuncio" required></textarea>
              </div>
              <div class="col-lg-12">
                <input type="submit" class="AnuncioNuevo-Btn btn" value="Enviar"/>
                <input type="hidden" name="_csrf" value="<%=_csrf %>"/>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <% _.each(anuncios, function(anuncio){ %>
  <section data-id="<%= anuncio.id %>" data-model="anuncio" class="col-lg-8 card" id="anuncios-card">
      <div class="Anuncio">
        <div class="row start-lg">
          <div class="Anuncio-Image col-lg-1"><img id="User-anuncios-img" src="/images/avatars/default_user.png"></div>
          <div class="Anuncio-Info col-lg-10">
            <div class="box">
              <div class="row start-lg">
                <div class="col-lg-12">
                  <h5 class="Anuncio-User"><%= anuncio.autor.name %></h5>
                </div>
                <div class="col-lg-12">
                  <h6 class="Anuncio-Time"><%= anuncio.fecha %></h6>
                </div>
                <div class="col-lg-12">
                  <p class="Anuncio-Text"><%= anuncio.text %></p>
                </div>
              </div>
            </div>
          </div>

        <% _.each(anuncio.comment,function(comment) { %>
          <div class="divider col-lg-12"> </div>
          <div class="Comentario col-lg-10">
            <div class="row start-lg">
              <div class="Comentario-Image col-lg-1"><img id="User-anuncios-img" src="/images/avatars/default_user.png"></div>
              <div class="Comentario-Info col-lg-10">
                <div class="box">
                  <div class="row start-lg">
                    <div class="col-lg-12">
                      <h5 class="Comentario-User"><%= comment.autor %></h5><p class="Comentario-Text"><%= comment.text %></p>
                    </div>
                    <div class="col-lg-12">
                      <h6 class="Comentario-Time"><%= comment.fecha %></h6>
                    </div>

                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }); %>

          <div class="divider col-lg-12"> </div>
          <div class="Anuncio col-lg-12">
            <div class="AnuncioNuevo">
              <div class="row start-lg">
                <div class="Anuncio-Image col-lg-1"><img id="User-anuncios-img" src="/images/avatars/default_user.png"></div>
                <div class="AnuncioNuevo-Form col-lg-10">
                  <form action="/comentario/create/<%= anuncio.id %>" class="box" method="POST" accept-charset="utf-8">
                    <div class="row start-lg">
                      <div class="col-lg-12">
                        <textarea name="text" id="text" class="AnuncioNuevo-Text" placeholder="Responder anuncio..." required></textarea>
                      </div>
                      <div class="col-lg-12">
                        <input type="submit" class="AnuncioNuevo-Btn btn" value="Comentar"/>
                        <input type="hidden" name="_csrf" value="<%=_csrf %>"/>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </section>
  <% }) %>

</section>
